<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_process"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Collage.ProcessActivity"
    tools:showIn="@layout/collage_process_layout"
    >

  <com.xiaopo.flying.puzzle.SquarePuzzleView
      android:background="@android:color/white"
      android:id="@+id/puzzle_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:radian="30"
      />
  <com.chocomint.mintery.Collage.DegreeSeekBar
      android:id="@+id/degree_seek_bar"
      android:visibility="invisible"
      tools:visibility="visible"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="16dp"
      tools:ignore="MissingClass" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp"
        >

      <ImageView
          android:id="@+id/btn_rotate"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:background="?attr/selectableItemBackgroundBorderless"

          android:scaleType="centerInside"
          android:src="@drawable/ic_rotate_right_white"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:fontFamily="@font/poppins"
          android:textSize="12sp"
          android:text="Rotate"
          android:textColor="@android:color/white"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp"
        >

      <ImageView
          android:id="@+id/btn_flip_horizontal"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:scaleType="centerInside"
          android:src="@drawable/ic_flip_horizontal_white"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:fontFamily="@font/poppins"
          android:textSize="12sp"
          android:text="Flip"
          android:textColor="@android:color/white"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp"
        >

      <ImageView
          android:id="@+id/btn_flip_vertical"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:scaleType="centerInside"
          android:src="@drawable/ic_flip_vertical_white"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="12sp"
          android:fontFamily="@font/poppins"
          android:text="Flip"
          android:textColor="@android:color/white"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp"
        >

      <ImageView
          android:id="@+id/btn_border"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:background="?attr/selectableItemBackgroundBorderless"

          android:scaleType="centerInside"
          android:src="@drawable/ic_border_white"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="12sp"
          android:fontFamily="@font/poppins"
          android:text="Border"
          android:textColor="@android:color/white"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp"
        >

        <ImageView
            android:id="@+id/btn_corner"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/ic_rounded_corner_white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:fontFamily="@font/poppins"
            android:text="Corner"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
  </LinearLayout>

</LinearLayout>
